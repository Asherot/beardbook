@model BeardBook.Models.HomeViewModels.HomeViewModel

<div class="row">
    <div class="col-md-8">
        @using (Html.BeginForm("AddPost", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="form-group">
                @Html.TextAreaFor(model => model.PostText, new { id = "PostText", @class = "form-control", required = "", placeholder = "What's on your mind?", rows = "3" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MediaFiles, new { @class = "btn btn-info" })
                @Html.TextBoxFor(model => model.MediaFiles, new { type = "file", multiple = "true", style = "display: none;" })
                <input type="submit" value="Post!" class="btn btn-primary" />
            </div>
        }

        <hr />
        @if (Model.PostViewModels != null)
        {
            @Html.Partial("_Posts", Model.PostViewModels.ToList())

        }
    </div>
</div>