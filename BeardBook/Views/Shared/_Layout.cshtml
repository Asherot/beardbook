<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/favicon.ico" rel="icon" type="image/x-icon">
    @if (string.IsNullOrWhiteSpace(ViewBag.Title))
    {
        <title>BeardBook</title>
    }
    else
    {
        <title>@ViewBag.Title - BeardBook</title>
    }
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("BeardBook", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container">
        <br />
        @if (Request.IsAuthenticated)
        {
            <div class="row">
                <div class="col-md-3">
                    <div class="navbar-collapse collapse">
                        @Html.Action("OptionsBar", "Home")
                    </div>
                </div>
                <div class="col-md-9 container body-content">
                    @RenderBody()
                </div>
            </div>
        }
        else
        {
            @RenderBody()
        }
        <div class="col-md-12">
            <hr />
            <footer>
                <p class="text-center">&copy; @DateTime.Now.Year - Piotr Machlarz</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/customJS")
    @RenderSection("scripts", false)
</body>
</html>
